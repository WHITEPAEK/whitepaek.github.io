---
import SimpleLayout from "@/layouts/SimpleLayout.astro";
import Banner from "@/components/Header/Banner";
import Profile from "@/components/Resume/Profile";
import WorkExperience from "@/components/Resume/WorkExperience";
import Projects from "@/components/Resume/Projects";
import Education from "@/components/Resume/Education";
import Activities from "@/components/Resume/Activities";
import Skills from "@/components/Resume/Skills";

const pageTitle = "백승주 이력서";
---

<SimpleLayout title={pageTitle}>

  <Banner client:load message="이력서 업데이트를 준비하고 있어요!" />

  <div class="container mx-auto px-4 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-5xl">
      <Profile client:load />
      <WorkExperience client:load />
      <Projects client:load />
      <Education client:load />
      <Activities client:load />
      <Skills client:load />
    </div>
  </div>
</SimpleLayout>
